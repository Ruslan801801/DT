{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2021"],
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "../mobile", "../native", "../shared"]
}
