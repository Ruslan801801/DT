+name: deeptea-deps
+
+services:
+  postgres:
+    image: postgres:16-alpine
+    container_name: deeptea-postgres
+    environment:
+      POSTGRES_DB: ${POSTGRES_DB:-deeptea}
+      POSTGRES_USER: ${POSTGRES_USER:-deeptea}
+      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-deeptea}
+    ports:
+      - "${POSTGRES_PORT:-5432}:5432"
+    volumes:
+      - deeptea_pg:/var/lib/postgresql/data
+    healthcheck:
+      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
+      interval: 5s
+      timeout: 5s
+      retries: 20
+    restart: unless-stopped
+
+  redis:
+    image: redis:7-alpine
+    container_name: deeptea-redis
+    ports:
+      - "${REDIS_PORT_EXPOSE:-6379}:6379"
+    command: ["redis-server", "--appendonly", "yes"]
+    volumes:
+      - deeptea_redis:/data
+    healthcheck:
+      test: ["CMD", "redis-cli", "ping"]
+      interval: 5s
+      timeout: 3s
+      retries: 20
+    restart: unless-stopped
+
+volumes:
+  deeptea_pg:
+  deeptea_redis:
